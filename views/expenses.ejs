<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALL EXPENSES</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            background-color: #111827;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f3f4f6;
        }

        .navbar {
            background-color: #1f2937;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background-color: #1f2937;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #e5e7eb;
            font-size: 2rem;
            font-weight: 600;
        }

        .expense-card {
            display: flex;
            justify-content: space-between;
            background-color: #2d3748;
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .expense-details {
            max-width: 70%;
        }

        .expense-details h2 {
            color: #e5e7eb;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .amount {
            color: #10B981; /* Green for positive values */
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .description {
            color: #d1d5db;
            font-size: 1rem;
            margin-bottom: 8px;
        }

        .payment-method {
            color: #9ca3af;
            font-size: 0.9rem;
        }

        .expense-date {
            text-align: right;
            color: #9ca3af;
            font-size: 1rem;
        }

        .expense-actions {
            position: absolute;
            bottom: 20px;
            right: 20px;
        }

        .edit-btn, .delete-btn {
            color: #60a5fa; /* Blue for edit button */
            font-size: 0.9rem;
            margin-left: 15px;
            text-decoration: none;
        }

        .edit-btn:hover, .delete-btn:hover {
            color: #3b82f6; /* Darker blue on hover */
        }

        .delete-btn {
            color: #ef4444; /* Red for delete button */
        }

        .delete-btn:hover {
            color: #dc2626; /* Darker red on hover */
        }

        .expense-card:hover {
            background-color: #374151;
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.3);
            transition: background-color 0.3s, box-shadow 0.3s;
        }

        @media (max-width: 600px) {
            .container {
                padding: 20px;
            }

            h1 {
                font-size: 1.6rem;
            }

            .expense-card {
                flex-direction: column;
                padding: 15px;
            }

            .expense-details h2 {
                font-size: 1.3rem;
            }

            .amount {
                font-size: 1.1rem;
            }

            .description, .payment-method, .expense-date {
                font-size: 0.9rem;
            }
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <a href="/" class="nav-link back-btn">Back</a>
    </nav>

    <div class="container">
        <h1>Recorded Expenses</h1>

        <% expenses.forEach(expense => { %>
        <div class="expense-card">
            <div class="expense-details">
                <h2><%= expense.name %></h2>
                <p class="amount">â‚¹<%= expense.amount %></p>
                <p class="description"><%= expense.description %></p>
                <p class="payment-method">Payment Method: <%= expense.paymentMethod %></p>
            </div>
            <div class="expense-date">
                <p><%= expense.date.toISOString().slice(0, 10) %></p>
            </div>
            <div class="expense-actions">
                <a href="/expenses/edit/<%= expense._id %>" class="edit-btn">Edit</a>
                <a href="/delete/<%= expense._id %>" class="delete-btn">Delete</a>
            </div>
        </div>
        <% }); %>

    </div>

</body>
</html>
